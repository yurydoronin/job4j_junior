<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!--Аппендеры -->
    <!--Консольный аппендер -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm:ss} [%t] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <!-- Логгеры -->
    <!-- Корневой логгер -->
    <root level="error">
        <appender-ref ref="STDOUT"/>
    </root>
    <!-- Логгер нашего класса  -->
    <logger name="ru.job4j.logger.principle004.UsageLog4j2" level="trace" >
        <appender-ref ref="STDOUT"/>
    </logger>
</configuration>